{
  "experiment": {
    "name": "qvarnet_experiment",
    "description": "VMC optimization with neural quantum states",
    "seed": null
  },
  "device": {
    "type": "cuda",
    "idx": 0
  },
  "model": {
    "type": "mlp",
    "architecture": [40, 8, 1],
    "activation": "tanh"
  },
  "training": {
    "batch_size": 1000,
    "num_epochs": 5000
  },
  "optimizer": {
    "type": "adam",
    "learning_rate": 0.001
  },
  "sampler": {
    "type": "metropolis_hastings",
    "step_size": 0.5,
    "chain_length": 500,
    "PBC": 20
  },
  "hamiltonian": {},
  "output": {
    "save_dir": "./results"
  }
}